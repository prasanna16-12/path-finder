{
  "devDependencies": {
    "@types/node": "^20.11.5",
    "copyfiles": "^2.4.1",
    "gts": "^5.3.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.3"
  },
  "scripts": {
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "build": "rimraf ./build && tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css build/",
    "start:dev": "npx tsc -w",
    "start": "npm run build && node build/index.js",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  }
}
